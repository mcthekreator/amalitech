{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["cordova", "cordova-plugin-device", "node"],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": [
    "jest.config.ts",
    "cypress/**/*",
    "cypress.config.ts",
    "./**/*.cy.ts",
    "./**/*.cy.tsx",
    "./cypress/**/*.ts"
  ]
}
